import yfinance as yf
import plotly.graph_objects as go

# Define the make_graph function
def make_graph(ticker, title):
    # Fetch stock data
    stock_data = yf.Ticker(ticker).history(period="5y")
    
    # Create the figure
    fig = go.Figure()
    
    # Add the stock price data
    fig.add_trace(go.Scatter(x=stock_data.index, y=stock_data['Close'], mode='lines', name='Stock Price'))
    
    # Add title and labels
    fig.update_layout(
        title=title,
        xaxis_title="Date",
        yaxis_title="Stock Price (USD)",
    )
    
    # Show the graph
    fig.show()

# Call the make_graph function for Tesla stock
make_graph("TSLA", "Tesla Stock Price Over the Last 5 Years")


